<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/TextRegularBlack12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Expense Title" />

                    <TextView
                        android:id="@+id/tvTime"
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/design_default_color_primary"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="Create Copy"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_25sdp"
                        android:textColor="@color/colorTextDarkGray"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/submitted_on_colon" />

                    <TextView
                        android:id="@+id/tvSubmittedOn"
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_25sdp"
                        android:textColor="@color/colorTextDarkGray"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="02 May" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_25sdp"
                        android:textColor="@color/colorTextDarkGray"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/total_amount_colon" />

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_25sdp"
                        android:textColor="@color/colorTextDarkGray"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="$280.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_25sdp"
                        android:textColor="@color/colorTextDarkGray"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/status_colon" />

                    <TextView
                        android:id="@+id/tvStatus"
                        style="@style/TextRegularBlack10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_25sdp"
                        android:textColor="@color/colorGreen"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/approved" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>