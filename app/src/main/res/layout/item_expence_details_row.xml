<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/claimCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:padding="@dimen/_3sdp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/chkRequest"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_3sdp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                    <ImageView
                        android:id="@+id/ivClaimImage"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:background="@drawable/mountains"
                        android:layout_height="@dimen/_110sdp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:gravity="center|start"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/claim_amount"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvClaimAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextRegular12"
                        android:text=""
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            style="@style/TextRegular12"
                            android:text="@string/claim_id"
                            android:textColor="@color/colorTextDarkGray"
                            android:gravity="start|center_vertical"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/tvClaimId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            style="@style/TextRegular12"
                            android:text="02 May 2021"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/colorTextDarkGray"
                            android:gravity="start|center_vertical"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            style="@style/TextRegular12"
                            android:text="@string/date_of_claim"
                            android:textColor="@color/colorTextDarkGray"
                            android:gravity="start|center_vertical"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/tvMerchant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            style="@style/TextRegular12"
                            android:text="02 May 2021"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/colorTextDarkGray"
                            android:gravity="start|center_vertical"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
