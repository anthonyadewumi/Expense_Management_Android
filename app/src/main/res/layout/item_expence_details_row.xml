<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/claimCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/group_name"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvGroupName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="02 May 2021"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:visibility="invisible"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/expence_type"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvExpenseType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="02 May 2021"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:visibility="invisible"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/merchant"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvMerchant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="02 May 2021"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:visibility="invisible"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/total_amount"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="02 May 2021"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:visibility="invisible"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/tax"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvTax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="N/A"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:visibility="invisible"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/net_amount"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvNetAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="02 May 2021"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:visibility="invisible"
                        android:layout_height="@dimen/_20sdp">

                    </RadioButton>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/description"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="N/A"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
