<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.main.MainActivity"
    android:background="@color/colorLightGray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVerticalLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVerticalRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92" />

        <LinearLayout
            android:id="@+id/layoutProfileDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/guidelineVerticalLeft"
            app:layout_constraintRight_toRightOf="@id/guidelineVerticalRight"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/merchant_name"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/merchant_name"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense_group"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/expense_group"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense_type"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/expense_type"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_number"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/company_number"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/department"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/department"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_submission"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/date_of_submission"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/currency"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/total_amount"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/tax"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_amount"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/net_amount"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reporting_manager_status"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/reporting_manager_status"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finance_manager_status"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:hint="@string/finance_manager_status"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:hint="@string/description"
                android:gravity="start|top"
                android:inputType="textCapSentences|textMultiLine"
                android:maxHeight="@dimen/_100sdp"
                android:lineSpacingMultiplier="1.3"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextBlack"
                android:background="@drawable/round_border_gray_white_bg"
                android:minHeight="@dimen/_30sdp"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attachments"
                style="@style/TextRegular12"
                android:textColor="@color/colorTextGray"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttachments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>