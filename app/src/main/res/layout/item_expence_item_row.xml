<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/claimCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Wade Warren"
                        android:layout_toLeftOf="@id/tvemId"
                        android:singleLine="false"
                        style="@style/TextMedium14"
                        android:textColor="@color/colorTextBlack" />
                    <TextView
                        android:id="@+id/tv_deparment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tvName"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Department"
                        android:layout_toLeftOf="@id/tvemId"
                        android:singleLine="false"
                        style="@style/TextRegular12"
                        android:textColor="@color/colorTextBlack" />

                    <TextView
                        android:id="@+id/tvemId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="(Employee_ID)"
                        style="@style/TextRegular12"
                        android:textColor="@color/colorTextBlack" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/last_submit"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="02 May 2021"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:text="@string/total_amount"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:layout_marginStart="@dimen/_5sdp"
                        style="@style/TextRegular12"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Total Claims"
                        style="@style/TextRegular12"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvtotal_claims"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:text="10"
                        style="@style/TextRegular12"
                        android:textColor="@color/colorTextDarkGray"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
